<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card bg-secondary mb-3 border-secondary">
            <div class="card-header">
                <h1 class="text-center mt-3"><i class="fas fa-sign-in-alt"></i>Login</h1>
            </div>
            <div class="card-body">
                <%- include ('./partials/messages') %>
                <form action="/users/login" method="POST">
                    <div class="form-group">
                        <label for="email">E-mail</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Enter email" />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control" placeholder="Enter password"/>
                    </div>
                    <button type="submit" class="btn btn-dark btn-block">Login</button>
                </form>
                <p class="lead mt-4">Don't have an account?  <a class="text-warning" href="/users/register">Register</a></p>
            </div>

            
        </div>
    </div>
</div>