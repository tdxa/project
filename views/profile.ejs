<div class="jumbotron">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link" href="/dashboard">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/dashboard/user">My posts</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="/profile">Settings</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/users/logout">Logout</a>
        </li>
    </ul>
    <div>
        <div class="mt-4 col-lg-8 mx-auto">
            <div class="card-header ">
                <h1 class="text-center mt-3">
                    Profile details
                </h1>
            </div>
            <div class="card-body text-center">
                <div>
                    <h1> <i class="fas fa-user fa-3x mt-3 mb-4 text-dark"></i></h1>
                </div>
                <table class="table table-hover">
                    <tbody>
                        <tr class="table-secondary">
                            <th scope="row">username</th>
                            <td>
                                <%= user%>
                            </td>
                        </tr>
                        <tr class="table-secondary">
                            <th scope="row">e-mail</th>
                            <td>
                                <%=email%>
                            </td>
                        </tr>
                        <tr class="table-secondary">
                            <th scope="row">joined</th>
                            <td>
                                <%=date.toLocaleDateString()%>
                            </td>
                        </tr>
                        <tr class="table-secondary">
                            <form action="/users/change" method="GET">
                                <td><button type="submit" class="btn btn-dark btn-block">change password</button></td>
                            </form>
                            <form action="/users/delete" method="GET">
                                <td><button type="submit" class="btn btn-dark btn-block" href='/users/profile'>delete account</button></td>
                            </form>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>